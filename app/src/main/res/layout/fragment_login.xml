<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--Content-->
    <LinearLayout
        android:background="@drawable/bg_board"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="50dp"
        android:orientation="vertical">

        <!--Logo-->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:src="@drawable/logo" />

        <!--User Edittext-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">



            <!--TxtField-->
            <EditText
                android:background="@drawable/user_textfield"
                android:id="@+id/edtFLogin_User"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="User :"
                android:inputType="text" />
        </LinearLayout>

        <!--Password Edittext-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">



            <!--TxtField-->
            <EditText
                android:background="@drawable/password_textfield"
                android:id="@+id/edtFLogin_Password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password :"
                android:inputType="textPassword" />
        </LinearLayout>

        <!--Login-->
        <Button
            android:background="@drawable/bg_button"
            android:id="@+id/btnFLogin_Login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="LOGIN"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>